<script>
  $(document).ready(function(){
    $('#dataTableActivity').DataTable();
  })
  $('#dataTableActivity').on('click', '.button-update', function(){
    let id = $(this).data('id') /* data from attribute data-id from <a> tag */
    let name = $(this).data('name') /* data from attribute data-id from <a> tag */
    let type = $(this).data('type') /* data from attribute data-id from <a> tag */
    $('#edit-modal-activity').modal('show') /* show modal */
    $('.id').val(id) /* send data to attribute value in <input> tag with class .id as intermediary */
    $('.name').val(name) /* send data to attribute value in <input> tag with class .name as intermediary */
    $('.type').val(type) /* send data to attribute value in <input> tag with class .type as intermediary */
  })

  CKEDITOR.replace( 'about' );
  
  /* show modal edit */
  $('#dataTable').on('click', '.button-update', function(){
    let id = $(this).data('id') /* data from attribute data-id from <a> tag */
    let name = $(this).data('name') /* data from attribute data-id from <a> tag */
    let qty = $(this).data('qty') /* data from attribute data-id from <a> tag */
    $('#edit-modal-feature').modal('show') /* show modal */
    $('.id').val(id) /* send data to attribute value in <input> tag with class .id as intermediary */
    $('.name').val(name) /* send data to attribute value in <input> tag with class .name as intermediary */
    $('.qty').val(qty) /* send data to attribute value in <input> tag with class .qty as intermediary */
  })
  /* End show modal edit */
</script>